<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\CustomerPriceProduct\Persistence" package="src.Orm.Zed.CustomerPriceProduct.Persistence">

    <table name="pyz_customer_price_product_import_storage" identifierQuoting="true">
        <column name="id_customer_price_product_storage" type="BIGINT" autoIncrement="true" primaryKey="true"/>
        <column name="customer_price_product_key" type="VARCHAR" required="true"/>
        <id-method-parameter value="pyz_customer_price_product_storage_pk_seq"/>
        <behavior name="synchronization">
            <parameter name="resource" value="price_import"/>
            <parameter name="locale" required="true"/>
            <parameter name="key_suffix_column" value="customer_price_product_key"/>
            <parameter name="queue_group" value="sync.storage.price_import"/>
        </behavior>

        <behavior name="timestampable"/>
    </table>

</database>
